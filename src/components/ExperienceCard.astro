---
import FadeInGsap from "./animations/FadeInGsap";

const { title, year, techIcons = [] } = Astro.props;
---
<FadeInGsap client:only>
    <div class="border-4 rounded-md p-2">
        <div class="border-y-4 rounded-md text-xl font-semibold p-4">
            <h3>{title}</h3>
          </div>
          
          <div class="flex justify-between font-light rounded-md text-sm p-2">
            <p>{year}</p>
            <div class="flex gap-1">
              {techIcons.map((Icon) => Icon && <Icon class="size-7" />)}
            </div>
          </div>
          
          <div class="p-4 text-lg prose">
            <slot />
          </div>
    </div>
    
</FadeInGsap>

